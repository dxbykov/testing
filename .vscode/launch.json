        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "address": "localhost",
            "port": 5858
        },
        {
            "name" : "Run Jest Tests",
            "type": "node",
            "request": "launch",
            "program" : "${workspaceRoot}/packages/dx-datagrid-core/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceRoot}/packages/dx-datagrid-core/",
            "args": [
                "--runInBand"
            ],
            "runtimeArgs": [
                "--harmony"
            ],
            "sourceMaps": true
        }        
    ]
}